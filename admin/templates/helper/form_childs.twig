{% macro select_childs(parents , level , value) %}
	{% import _self as macros %}
	{% for item in parents %}
		<option value='{{ item.id }}' {{ item.id == value ? 'selected' : '' }}>
			{% if level > 0 %}
				{% for i in range(1, level ) %}
					&angrt;
				{% endfor %}
			{% endif %}
			{{ item.title }}
		</option>
		{{ macros.select_childs(item.childs, level + 1, value) }}
	{% endfor %}
{% endmacro %}