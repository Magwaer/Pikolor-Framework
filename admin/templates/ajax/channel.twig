{% extends "ajax_box.twig" %}

{% block content %}
	
	
	<div class="inner">
		<form class="form-horizontal ajax_form" action="{{ form_action }}" data-callback="Admin.hide_modal()">
			<div class="form-body">
				<div class="form-group">
					<label class="control-label col-md-3">Group Name</label>
					<div class="col-md-9">
						<input type="text" placeholder="" name="data[name]" class="form-control" value="{{ channel.name }}">
					</div>
				</div>
				
				<div class="form-group">
					<label class="control-label col-md-3">Custom Field Group</label>
					<div class="col-md-9">
						<select class="bs-select " name="data[group_id]">
							{% for goup in groups %}
								<option value="{{ goup.id }}" {{ channel.group_id == goup.id ? 'selected' : '' }}>{{ goup.name }}</option>
							{% endfor %}	
							</select>
					</div>
				</div>
				
			</div>
			<div class="form-actions">
				<div class="row">
					<div class="col-md-offset-3 col-md-9">
						<button class="btn btn-blue" type="submit"><i class="fa fa-check"></i> Save</button>
						<button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
					</div>
				</div>
			</div>
			<input type="hidden" name="ac" value="{{ action }}" />
		</form>	
	</div>
{% endblock %}


{% block footer %}
<script>
	Admin.init_select();
</script>
{% endblock %}