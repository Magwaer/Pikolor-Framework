{% extends "layout.twig" %}

{% block stylesheets %}
	{{ parent() }}
	
{% endblock %}

{% block content %}
	
	
	<div class="inner">
		<div class="big_box">
			<div class="btn-group pull-right">
				<button type="button" class="btn btn-fit-height btn-grey dropdown-toggle" dropdown-toggle" data-toggle="dropdown" data-delay="1000" data-close-others="true">
					{{ 'Actions' }} <i class="fa fa-angle-down"></i>
				</button>
				<ul class="dropdown-menu pull-right" role="menu">
					<li><a href="{{ this.route.generate('node_add', {'channel' : this_channel.id }) }}" >New Node</a></li>
				</ul>
			</div>
			
			<h3 class="box-title">
				{{ page_title }}
			</h3>
			
			
			<!-- END PAGE HEADER-->
			<table class="table ">
				<thead class="flip-content">
					<tr>
						<th> Title</th>
						<th width="150px"> Template </th>
						<th class="numeric" width="100px"> Status </th>
						<th class="numeric" width="100px"> Options </th>
					</tr>
				</thead>
				<tbody>
				{% for ind,node in nodes %}
					<tr style="vertical-align:bottom">
						<td style="vertical-align:middle"> 
							<a href="{{ this.route.generate('node_edit', {'id' : node.id }) }}">{{ node.title }}</a>
						</td>
						<td style="vertical-align:middle">{{ node.template_name }}</td>
						<td class="numeric" style="vertical-align:middle">
							{% if node.status == 'active' %}
							<span class="label label-sm label-success">Active</span>
							{% else %}
							<span class="label label-sm label-warning">Pending</span>
							{% endif %}
						</td>
						<td class="numeric" style="vertical-align:middle">
							<div class="btn-group pull-right">
								<button type="button" class="btn btn-sm btn-blue dropdown-toggle" data-toggle="dropdown" data-delay="1000" data-close-others="true">
									{{ 'Actions' }} <i class="fa fa-angle-down"></i>
								</button>
								<ul class="dropdown-menu pull-right" role="menu">
									<li><a href="{{ this.route.generate('node_edit', {'id' : node.id }) }}"  >{{ 'Edit' }}</a></li>
									<li><a href="{{ this.route.generate('node_delete', {'id' : node.id }) }}" onclick="return Admin.delete_node($(this))" >{{ 'Remove' }}</a></li>
								</ul>
							</div>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

{% block javascript_bottom %}
	
{% endblock %}
