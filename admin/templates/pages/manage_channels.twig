{% extends "admin/templates/layout.twig" %}

{% block content %}
	
	<div class="inner">
		<div class="big_box">
			<div class="btn-group pull-right">
				<button type="button" class="btn btn-fit-height btn-grey dropdown-toggle" dropdown-toggle" data-toggle="dropdown" data-delay="1000" data-close-others="true">
					{{ 'Actions' }} <i class="fa fa-angle-down"></i>
				</button>
				<ul class="dropdown-menu pull-right" role="menu">
					<li><a href="{{ this.route.generate('add_channel') }}" data-toggle="modal" data-target="#ajax_modal" >New Channel</a></li>
				</ul>
			</div>
			
			<h3 class="box-title">
				{{ page_title }}
			</h3>
			
			
			<!-- END PAGE HEADER-->
			<table class="table ">
				<thead class="flip-content">
					<tr>
						<th>Title</th>
						<th width="20%">Custom Fields</th>
						<th class="numeric" width="100px" style="text-align:center"> Options </th>
					</tr>
				</thead>
				<tbody>
				{% for channel in channels %}
					<tr style="vertical-align:bottom">
						<td style="vertical-align:middle"> 
							<a href="{{ this.route.generate('channel' , {'id' : channel.id }) }}">{{ channel.name }}</a>
						</td>
						<td class="numeric" style="vertical-align:middle"> {{ channel.fields }} </td>
						<td class="numeric" style="vertical-align:middle; text-align:center;">
							<div class="btn-group ">
								<button type="button" class="btn btn-sm btn-blue dropdown-toggle" data-toggle="dropdown" data-delay="1000" data-close-others="true">
									{{ 'Actions' }} <i class="fa fa-angle-down"></i>
								</button>
								<ul class="dropdown-menu pull-right" role="menu">
									<li><a href="{{ this.route.generate('edit_channel' , {'id' : channel.id }) }}" data-toggle="modal" data-target="#ajax_modal" >{{ 'Edit' }}</a></li>
									<li><a href="{{ this.route.generate('delete_channel' , {'id' : channel.id }) }}" onclick="return Admin.delete_channel($(this))"  >{{ 'Remove' }}</a></li>
								</ul>
							</div>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}


