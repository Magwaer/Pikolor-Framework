{% macro node_templates(templates , level) %}
	{% import _self as macros %}
	{% for k,template in templates %}
		{% if template is iterable %}
		<option value='' disabled >
			{% if level > 0 %}
				{% for i in range(1, level ) %}
					&angrt;
				{% endfor %}
			{% endif %}
			{{ k }}
		</option>
			{{ macros.node_templates(template, level + 1) }}
		{% else %}
		<option value='' >
			{% if level > 0 %}
				{% for i in range(1, level ) %}
					&angrt;
				{% endfor %}
			{% endif %}
			{{ template }}
		</option>
		{% endif %}
	{% endfor %}
{% endmacro %}