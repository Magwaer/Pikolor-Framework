{% extends "full-page-layout.html" %}

{% block stylesheets %}
	{{ parent() }}
	
{% endblock %}

{% block content %}
	
	<div class="page-content-wrapper">
		<div class="page-content">
			<h3 class="page-title">
				{{ page_title }}
			</h3>
			<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<i class="fa fa-home"></i>
						<a href="/admin/dashboard">Dashboard</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="#">Content</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="/admin/channel/{{ this_channel.id }}">{{ this_channel.title }}</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="/admin/node_edit/{{ this_node.id }}">{{ this_node.title }}</a>
					</li>
				</ul>
				<div class="page-toolbar">
					<div class="btn-group pull-right">
						<button type="button" class="btn btn-fit-height grey-salt dropdown-toggle" dropdown-toggle" data-toggle="dropdown" data-delay="1000" data-close-others="true">
							{{ 'Actions' }} <i class="fa fa-angle-down"></i>
						</button>
						<ul class="dropdown-menu pull-right" role="menu">
							<li><a href="#" data-toggle="modal" data-target="#ajax_modal" >Dublicate Node</a></li>
							<li><a href="#" data-toggle="modal" data-target="#ajax_modal" >Remove Node</a></li>
						</ul>
					</div>
				</div>
			</div>
			<!-- END PAGE HEADER-->
			
			<div class="tabbable-line">
				<ul class="nav nav-tabs ">
					<li class="active">
						<a href="#tab_content" data-toggle="tab">
						Content </a>
					</li>
					<li>
						<a href="#tab_options" data-toggle="tab">
						Options </a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane active form" id="tab_content">
						
						<div class="portlet box green">
							<div class="portlet-title">
								<div class="caption">
									Node Content
								</div>
							</div>
							<div class="portlet-body form">
								<form class="form-horizontal form-bordered form-row-stripped" action="#">
									<div class="form-body">
										<div class="form-group">
											<label class="control-label col-md-3">First Name</label>
											<div class="col-md-9">
												
												<div class="lang_switcher">
													<div class="lang_row">
														<div class="lang " data-lang="ro">
															<input type="text" placeholder="ro ro ro " class="form-control" >
														</div>
														<div class="lang" data-lang="ru">
															<input type="text" placeholder="ru ru ru " class="form-control" >
														</div>
														<div class="langs">
															<select class="bs-select " data-width="100">
																<option value="ro">RO</option>
																<option value="ru">RU</option>
															</select>
														</div>
													</div>
												</div>
											
												
											</div>
										</div>
										<div class="form-group">
											<label class="control-label col-md-3">Last Name</label>
											<div class="col-md-9">
												<input type="text" class="form-control" placeholder="medium">
												<span class="help-block">
												This is inline help </span>
											</div>
										</div>
										
										<div class="form-group">
											<label class="control-label col-md-3">Street</label>
											<div class="col-md-9">
												<input type="text" class="form-control">
											</div>
										</div>
										
									</div>
									<div class="form-actions">
										<div class="row">
											<div class="col-md-offset-3 col-md-9">
												<button class="btn green" type="submit"><i class="fa fa-check"></i> Save</button>
												<button class="btn default" type="button">Cancel</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						
						
						
					</div>
					<div class="tab-pane" id="tab_options">
					
					
						<div class="portlet box green">
							<div class="portlet-title">
								<div class="caption">
									Node Options
								</div>
							</div>
							<div class="portlet-body form">
								<form class="form-horizontal form-bordered form-row-stripped" action="#">
									<div class="form-body">
										<div class="form-group">
											<label class="control-label col-md-3">Published</label>
											<div class="col-md-9">
												<input type="checkbox" {{ this_node.status == 'active' ? 'checked' : '' }} class="make-switch" data-on-color="success" data-off-color="warning">
											</div>
										</div>
										{% import "./helper/form.twig" as form_helper %}
										<div class="form-group">
											<label class="control-label col-md-3">Template</label>
											<div class="col-md-9">
												<select class="bs-select">
													{{ form_helper.node_templates(templates, 0) }}
												</select>
											</div>
										</div>
										
									</div>
									<div class="form-actions">
										<div class="row">
											<div class="col-md-offset-3 col-md-9">
												<button class="btn green" type="submit"><i class="fa fa-check"></i> Save</button>
												<button class="btn default" type="button">Cancel</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
						
						
						
					</div>

				</div>
			</div>
			
			
		</div>
	</div>
{% endblock %}


{% block javascript_bottom %}
	<script src="{{ js_path }}admin.js" type="text/javascript"></script>
{% endblock %}
