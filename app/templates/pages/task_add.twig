{% extends "full-page-layout.html" %}

{% block stylesheets %}
	{{ parent() }}
	
        <link href="{{ asset_path }}global/plugins/bootstrap-summernote/summernote.css" rel="stylesheet" type="text/css" />
        <link href="{{ asset_path }}global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
<div class="page-content-wrapper">
		<div class="page-content">
			<h3 class="page-title">
				{{ page_title }}
			</h3>
			<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<i class="fa fa-home"></i>
						<a href="/dashboard">Dashboard</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="/projects">Projects</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="/project/{{ project.id }}">{{ project.name }}</a>
						<i class="fa fa-angle-right"></i>
					</li>
					<li>
						<a href="/task/{{ task.id }}">{{ task.name }}</a>
					</li>
				</ul>

			</div>
						
				<form action="{{ form_action }}" method="post" class='ajax_form form-horizontal' id='task_form' >
					<div class="form-body">
						<div class="form-group">
							<label class="col-md-3 control-label">{{ 'Name' }}</label>
							<div class="col-md-8">
								<input class="form-control" type="text"  name="data[name]" value="{{ task.name }}">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label">{{ 'Description' }}</label>
							<div class="col-md-8">
								<textarea class="form-control" id="task_description" name="data[content]" >{{ task.content }}</textarea>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label">{{ 'Estimate time (hours)' }}</label>
							<div class="col-md-8">
								<input class="form-control" type="text"  name="data[estimate]" value="{{ task.estimate }}" style="width:100px">
							</div>
						</div>
						
						<div class="form-group" id="user_company" >
							<label class="col-md-3 control-label">{{ 'Developer' }}</label>
							<div class="col-md-8" >
								<select  class="bs-select" id="user_group" name="data[developer_id]">
									<option value="0">Select One</option>
									{% for developer in developers %}
									<option value="{{ developer.id }}" }  {{ task.developer_id == developer.id ? 'selected' : '' }}>{{ developer.name }}</option>
									{% endfor %}
								</select>
							</div>
						</div>
						
						<div class="form-group" >
							<label class="col-md-3 control-label"> </label>
							<div class="col-md-8" >
								<a href="/" class="btn default" >Cancel</a>
								<button type="submit" class="btn blue" id="task_wizzard">Save</button>
							</div>
						</div>
						
					</div>
					<input type="hidden" name="action" value="{{ action }}">
					
				</form>
			
		</div>
</div>
{% endblock %}

{% block javascript_bottom %}

	<script src="{{ asset_path }}global/plugins/bootstrap-summernote/summernote.min.js" type="text/javascript"></script>
	<script src="{{ asset_path }}global/plugins/bootstrap-markdown/lib/markdown.js" type="text/javascript"></script>
	<script src="{{ asset_path }}global/plugins/bootstrap-markdown/js/bootstrap-markdown.js" type="text/javascript"></script>
<script>
	$(function(){
		$('.bs-select').selectpicker();
		$("#task_description").summernote({height:300})
	})
</script>
{% endblock %}