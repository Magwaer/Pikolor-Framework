{% extends "ajax_box.html" %}

{% block content %}

<div class="row">
	<form action="{{ form_action }}" method="post" class='ajax_form form-horizontal' id='user_form' >
		<div class="form-body">
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Name' }}</label>
				<div class="col-md-7">
					<input class="form-control" type="text"  name="data[name]" value="{{ user.name }}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Email' }}</label>
				<div class="col-md-7">
					<input class="form-control" type="text" name="data[email]" value="{{ user.email }}">
				</div>
			</div>
			{% if action == 'add' %}
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Password' }}</label>
				<div class="col-md-7">
					<input class="form-control" type="text" name="data[password]" >
				</div>
			</div>
			{% endif %}
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Role' }}</label>
				<div class="col-md-7">
					<select  class="bs-select" id="user_role" data-width="150px" name="data[role]">
						<option value="1" {{ user.role_id == 1 ? 'selected' : '' }}>Admin</option>
						<option value="2" {{ user.role_id == 2 ? 'selected' : '' }}>Developer</option>
						<option value="3" {{ user.role_id == 3 ? 'selected' : '' }}>Client</option>
					</select>
				</div>
			</div>
			<div class="form-group" id="user_company" style='{{ action == 'add' or user.role != 'client' ? 'display:none' : ''}}'>
				<label class="col-md-4 control-label">{{ 'Company' }}</label>
				<div class="col-md-7" style="padding-top:7px">
					<select  class="bs-select" id="user_group" name="data[company]">
						<option value="0" >Select one</option>
						{% for company in companies %}
						<option value="{{ company.id }}" }  {{ user.company_id == company.id ? 'selected' : '' }}>{{ company.company }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			
		</div>
		<input type="hidden" name="action" value="{{ action }}">
	</form>
</div>
{% endblock %}

{% block footer %}	
<div class="modal-footer">
	<button type="button" class="btn default" data-dismiss="modal">Close</button>
	<button type="button" class="btn blue" id="user_wizzard">Save</button>
</div>
<script>
	$(function(){
		$('.bs-select').selectpicker();
	})
</script>
{% endblock %}