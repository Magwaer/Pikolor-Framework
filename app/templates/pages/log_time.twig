{% extends "ajax_box.html" %}

{% block content %}

<div class="row">
	<form action="{{ form_action }}" method="post" class='ajax_form form-horizontal' id='log_form' >
		<div class="form-body">
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'How much hours' }}</label>
				<div class="col-md-7">
					<input class="form-control" type="text"  name="data[hours]" style="width:100px">
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Date' }}</label>
				<div class="col-md-7">
					<input class="form-control date-picker" type="text"  name="data[date]"  style="width:100px" value="{{ today }}">
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label">{{ 'Comment' }}</label>
				<div class="col-md-7">
					<textarea class="form-control" name="data[comment]" ></textarea>
				</div>
			</div>
			
		</div>
		<input type="hidden" name="action" value="{{ action }}">
	</form>
</div>
{% endblock %}

{% block footer %}	
<div class="modal-footer">
	<button type="button" class="btn default" data-dismiss="modal">Close</button>
	<button type="button" class="btn blue" id="log_wizzard">Save</button>
</div>
<script>
	$(function(){
		$.fn.datepicker.defaults.format = "yyyy-mm-dd";
		$(".date-picker").datepicker();
	})
</script>
{% endblock %}